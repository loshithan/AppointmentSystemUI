@using BlazorServer.Services
@code {
    [Inject] private AuthService AuthService { get; set; }
    [Inject] private NavigationManager NavManager { get; set; }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        NavManager.NavigateTo("/login", forceLoad: true); // Redirect to login page
    }
}

<div class="flex flex-1 items-center justify-start">
    <div class="flex shrink-0 items-center">
        <h1 class="font-bold text-white text-2xl">Appointment</h1>
    </div>
</div>

<!-- Right side: Menu Items -->
<div class="hidden sm:ml-6 sm:block">
    <div class="flex space-x-4 pe-5">
        <!-- Menu Links -->
        <a href="/" class="rounded-md  px-3 py-2 hover:bg-[#258cfb] text-sm font-medium text-white"
            aria-current="page">Dashboard</a>
        <AuthorizeView Roles="Admin,Patient">

            <a href="/appointments"
                class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-[#258cfb] hover:text-white">My
                Appointments</a>
        </AuthorizeView>
        <AuthorizeView Roles="Admin,Doctor">
            <a href="/sessions"
                class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-[#258cfb] hover:text-white">My
                Sessions</a>
        </AuthorizeView>
        <a href="#"
            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-[#258cfb] hover:text-white">Profile</a>
        <a @onclick="Logout" @onclick:preventDefault href="#"
            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-[#258cfb] hover:text-white">Logout</a>

    </div>
</div>