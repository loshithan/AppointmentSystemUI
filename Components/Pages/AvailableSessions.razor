@page "/availablesessions"
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.WebUtilities

@code {
    private string doctorName;

    protected override void OnInitialized()
    {
        var uri = new Uri(Navigation.Uri);
        var queryParams = QueryHelpers.ParseQuery(uri.Query);

        if (queryParams.TryGetValue("doctorname", out var doctor))
        {
            doctorName = doctor;
        }
    }
}

<PageTitle>Available Sessions</PageTitle>

@if (!string.IsNullOrEmpty(doctorName))
{
    <h2 class="text-2xl font-bold">Available Sessions for @doctorName</h2>
    <ChannelAccordian DoctorName="@doctorName" />
}
else
{
    <p class="text-red-500">No doctor selected. Please choose a doctor.</p>
}